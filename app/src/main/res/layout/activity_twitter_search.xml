<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TwitterSearchActivity">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout

        android:visibility="visible"
        android:orientation="horizontal"
        android:elevation="15dp"
        android:id="@+id/lay"
        android:background="@drawable/laybg2"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt"
            android:textAlignment="center"
            android:layout_below="@+id/linearLayout"
            android:text="To open service document in \nbrowser click below - "
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"/>
        <TextView
            android:id="@+id/chrome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt"
            android:textSize="15dp"
            android:typeface="monospace"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#3814BA"
            android:textStyle="bold"
            android:text="Click Here"/>
        <RelativeLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"

            android:layout_marginBottom="5dp"
            android:background="@drawable/round"
            android:orientation="horizontal">



            <EditText
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:background="@null"
                android:ems="10"

                android:hint="Enter your city name"
                android:layout_centerVertical="true"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLength="2000"
                android:textAlignment="center"
                android:maxLines="4"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp" />

        </RelativeLayout>

        <ImageButton
            android:id="@+id/search2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/round2"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/ic_baseline_search_24" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@+id/lay"
        android:id="@+id/txt11"
        android:layout_marginTop="20dp"
        android:text="Select Services by selecting below options -"
        android:layout_marginStart="10dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/txt11"
        android:padding="10dp"
        android:id="@+id/linearLayout2"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <LinearLayout

            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/bed"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="BEDS"/>

            <CheckBox
                android:id="@+id/icu"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="ICU"/>

            <CheckBox
                android:id="@+id/oxygen"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Oxygen"/>


        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/txt11"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"

            android:layout_marginStart="10dp"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/ventilators"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Ventilators"/>

            <CheckBox
                android:id="@+id/fabiflu"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Fabiflu"/>

            <CheckBox
                android:id="@+id/remdesivir"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Remdesivir"/>


        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/txt11"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"

            android:layout_marginStart="10dp"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/Favipiravir"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Favipiravir"/>

            <CheckBox
                android:id="@+id/Tocilizumab"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Tocilizumab"/>

            <CheckBox
                android:id="@+id/plasma"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Plasma"/>

            <CheckBox
                android:id="@+id/tiffin"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Tiffin Service"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt13"
        android:textAlignment="center"
        android:text="WARNING"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt14"
        android:layout_margin="10dp"
        android:text="1.) Do NOT make advanced payments unless you are 100% sure about their authenticity\n2.)Check for replies under the tweets\n3.) Make sure search results are sorted by Latest"
        android:textSize="18dp"

        android:textColor="#000000"
        android:layout_below="@+id/txt13"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"/>

    </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>